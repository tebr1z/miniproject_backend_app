@model IEnumerable<string>

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="card p-4 border rounded shadow-sm">
                    <h5 class="card-title mb-3">Assign Roles</h5>

                    <div class="form-group">
                        @foreach (IdentityRole role in ViewBag.Roles)
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="newUserRoles" value="@role.Name" @(Model.Contains(role.Name) ? "checked" : "") id="role_@role.Name">
                                <label class="form-check-label" for="role_@role.Name">@role.Name</label>
                            </div>
                        }
                    </div>

                    <div class="text-danger mt-3">
                        @Html.ValidationSummary()
                    </div>

                    <button type="submit" class="btn btn-success mt-3">Update Roles</button>
                </div>
            </div>
        </div>
    </div>
</form>
