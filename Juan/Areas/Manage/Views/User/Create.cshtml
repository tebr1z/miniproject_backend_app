
@model NewUserVM

<section class="register-area pt-10">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-register-wrapper mt-4 p-4 border rounded">
                    <h4 class="text-center mb-4">Create New Account</h4>
                    <div class="text-danger">
                        @Html.ValidationSummary()
                    </div>
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="@Model.Fullname" class="form-label"></label>
                            <input asp-for="@Model.Fullname" class="form-control" placeholder="First Name">
                            <span class="text-danger" asp-validation-for="@Model.Fullname"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email" class="form-label"></label>
                            <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Username" class="form-label"></label>
                            <input asp-for="@Model.Username" class="form-control" placeholder="Username">
                            <span class="text-danger" asp-validation-for="@Model.Username"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Password" class="form-label"></label>
                            <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password">
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.RePassword" class="form-label"></label>
                            <input asp-for="@Model.RePassword" type="password" class="form-control" placeholder="Confirm Password">
                            <span class="text-danger" asp-validation-for="@Model.RePassword"></span>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
