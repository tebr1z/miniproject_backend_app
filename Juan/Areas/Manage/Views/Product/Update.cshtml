
@model Juan.Models.Product

@{
    ViewData["Title"] = "Update Product";
}

<div class="container mt-5">
    <h2>Update Product</h2>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="ProductName" class="form-label">Product Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Price</label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OldPrice" class="form-label">Old Price</label>
            <input asp-for="OldPrice" class="form-control" />
            <span asp-validation-for="OldPrice" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Desc" class="form-label">Description</label>
            <textarea asp-for="Desc" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Desc" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Count" class="form-label">Count</label>
            <input asp-for="Count" class="form-control" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Img" class="form-label">Image</label>
            <input type="file" asp-for="ImageFile" class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="ProductId" />

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
