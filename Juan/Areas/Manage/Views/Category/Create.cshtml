@model Category
<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-7">Create New Category</h4>
        <form id="createCategoryForm" method="post" action="@Url.Action("Create", "Category")">
            <div class="mb-3">
                <label for="categoryName" class="form-label">Category Name</label>
                <input type="text" class="form-control" id="categoryName" name="CategoryName" required>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="isDeleted" name="IsDeleted">
                <label class="form-check-label" for="isDeleted">Is Deleted</label>
            </div>
            <button type="button" class="btn bg-primary-subtle text-primary" onclick="confirmSubmit('@Url.Action("Create", "Category")')">
                <span class="fs-4 me-1">+</span>
                Create New Category
            </button>

        </form>
    </div>
</div>
<script>
    function confirmSubmit(url) {
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, create it!',
            cancelButtonText: 'No, cancel!',
            customClass: {
                container: 'swal2-container',
                popup: 'swal2-popup',
                title: 'swal2-title',
                confirmButton: 'swal2-confirm',
                cancelButton: 'swal2-cancel'
            },
            background: '#ffffff', // White background
            width: '600px',
            padding: '3em',
        }).then((result) => {
            if (result.isConfirmed) {
                // Show completion message
                Swal.fire({
                    title: 'Completed!',
                    text: 'The category has been created successfully.',
                    icon: 'success',
                    confirmButtonColor: '#3085d6',
                    background: '#ffffff', // White background
                    width: '600px',
                    padding: '3em',
                }).then(() => {
                    window.location.href = url; 
                });
            } else if (result.dismiss === Swal.DismissReason.cancel) {
             
                Swal.fire({
                    title: 'Cancelled',
                    text: 'The action has been cancelled.',
                    icon: 'error',
                    confirmButtonColor: '#3085d6',
                    background: '#ffffff', 
                    width: '600px',
                    padding: '3em',
                });
            }
        });
    }
</script>
